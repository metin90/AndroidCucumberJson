<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Automation Suite" allow-return-values="true" verbose="1" parallel="tests"
       thread-count="4"  configfailurepolicy="continue">

    <listeners>
        <listener class-name="utils.Listeners.TestListener"/>
        <listener class-name="utils.Listeners.AnnotationTransformer"/>
        <listener class-name="utils.CustomizedReport.CustomizedEmailableReport"/>
    </listeners>


    <parameter name="tl_ProjectName" value="Network Automation Platforms"/>
    <parameter name="tl_TestPlanName" value="AutomationTestPlan"/>
    <parameter name="tl_BuildName" value="2021-06-Sprint"/>


    <test name="Login" parallel="methods" thread-count="2">
        <classes>
            <class name="Login.Login"/>
        </classes>
    </test>

    <test name="Logout" parallel="methods" thread-count="2">
        <classes>
            <class name="Logout.Logout"/>
        </classes>
    </test>

    <test name="PopulateNodes - MaintenanceWindow - Work Orders - Templates - Other Cases" parallel="methods" thread-count="2" preserve-order="true">
        <classes>
            <class name="Collections.Nodes.AllNodes"/>
            <class name="Execution.MaintenanceWindow.MaintenanceWindow"/>
            <class name="Execution.WorkOrders.WorkOrders"/>
            <class name="Defitions.Templates.Templates"/>
            <class name="DbCleanupAndOtherProcesses.OtherCases"></class>
        </classes>
    </test>

    <test name="ServiceTests" parallel="methods" thread-count="2">
        <classes>
            <class name="Service.ServiceTests"/>
        </classes>
    </test>

    <test name="CustomScripts" thread-count="1">
        <classes>
            <class name="Defitions.CustomScripts.CustomScripts"/>
        </classes>
    </test>

    <test name="Regions" parallel="methods" thread-count="1">
        <classes>
            <class name="Collections.Regions.Regions"/>
        </classes>
    </test>

    <test name="Sites" parallel="methods" thread-count="1">
        <classes>
            <class name="Collections.Sites.Sites"/>
        </classes>
    </test>

    <test name="UserRoles" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.UserRoles.UserRoles"/>
        </classes>
    </test>

    <test name="Users" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.Users.Users"/>
        </classes>
    </test>

    <test name="NodeRoles" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.NodeRoles.NodeRoles"/>
        </classes>
    </test>

    <test name="Groups" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.Groups.Groups"/>
        </classes>
    </test>

    <test name="RouterLinks" parallel="methods" thread-count="2">
        <classes>
            <class name="Collections.RouterLinks.RouterLinks"/>
        </classes>
    </test>

    <test name="IGenTemplateTestes_Migration" parallel="methods" thread-count="2">
        <classes>
            <class name="Utilities.IGenTemplateTestes_Migration"/>
        </classes>
    </test>

    <test name="IGenTemplateTestes_Development" parallel="methods" thread-count="2">
        <classes>
            <class name="Utilities.IGenTemplateTestes_Development"/>
        </classes>
    </test>

    <test name="ClassificationRules" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.ClassificationRules.ClassificationRules"/>
        </classes>
    </test>

    <test name="Result Verification Rules" parallel="methods" thread-count="2">
        <classes>
            <class name="Defitions.ResultVerificationRules.ResultVerificationRules"/>
        </classes>
    </test>





</suite>